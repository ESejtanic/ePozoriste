                                    <StackLayout Padding="8">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <FormattedString.Spans>
                                                        <Span Text="Datum rezervacije:      " FontAttributes="Bold" FontSize="Micro"/>
                                                        <Span Text="{Binding DatumRezervacije}"  FontSize="Micro"></Span>
                                                    </FormattedString.Spans>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>

                                    <StackLayout Padding="8">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <FormattedString.Spans>
                                                        <Span Text="Odobrena:                     " FontAttributes="Bold" FontSize="Micro"/>
                                                        <Span Text="{Binding Odobrena}"  FontSize="Micro"></Span>
                                                    </FormattedString.Spans>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>

                                    <StackLayout Padding="8">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <FormattedString.Spans>
                                                        <Span Text="Broj rezervacije:          " FontAttributes="Bold" FontSize="Micro"/>
                                                        <Span Text="{Binding BrojRezervacije}"  FontSize="Micro"></Span>
                                                    </FormattedString.Spans>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>

                                    <Button Clicked="Button_Clicked" Text="Odaberi sjedište" HeightRequest="40" WidthRequest="130" CornerRadius="7" TextColor="White" BackgroundColor="Blue" HorizontalOptions="Center" VerticalOptions="Center"  ></Button>
                                    <Button Clicked="Button_Clicked_1" Text="Otkaži" HeightRequest="40" WidthRequest="130" CornerRadius="7" TextColor="White" BackgroundColor="Blue" HorizontalOptions="Center" VerticalOptions="Center"  ></Button>

                                </StackLayout>
                            </ViewCell>
                            
                        </DataTemplate>
                       
                    </ListView.ItemTemplate>
                    
                </ListView>
                  
            </StackLayout>

        </StackLayout>
        
        
